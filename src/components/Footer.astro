---
import { Image } from "astro:assets";

import Container from "./Container.astro";
import Section from "./Section.astro";

import logo from "../assets/logo.png";
---

<Section classes="section-footer">
    <Container classes="footer" paddingBlock="10">
        <div class="footer__side">
            <Image src={logo} alt="Yonelis logo" width="120" />
        </div>
        <nav>
            <ul>
                <li><a href="#hakkimizda">Hakkımızda</a></li>
                <li><a href="#markalar">Markalar</a></li>
                <li><a href="#iletisim">İletişim</a></li>
            </ul>
        </nav>
        <address class="footer__side">
            Örnektepe Mah. Pazaraltı Sok. No 148 <br />
            Beyoğlu, İstanbul <br />
            <a href="mailto:destek@yonelis.com.tr">destek@yonelis.com.tr</a>
            <a href="tel:+902124449585">444 95 85</a>
        </address>
    </Container>
    <Container classes="footer-bottom" fullBleed paddingBlock="4">
        <span>Tüm hakları saklıdır.</span>
        <br />

        <span>
            <a href="https://mildpixel.com" target="_blank"
                ><strong>mild pixel</strong> software</a
            ></span
        >
    </Container>

    <style>
        :global(.section-footer) {
            background-color: #ffffff;
        }
        :global(.footer) {
            background-color: #ffffff;
            color: var(--gray-9);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
        }
        :global(.footer-bottom) {
            text-align: center;
            background-color: var(--brand-900);
            font-size: var(--font-size-0);
        }

        @media (min-width: 500px) {
            :global(.footer) {
                flex-direction: row;
            }
        }

        .footer__side {
            flex: 1;
        }

        img {
            display: block;
        }

        address {
            font-size: var(--font-size-0);
            text-align: center;
        }

        @media (min-width: 500px) {
            address {
                text-align: right;
            }
        }

        a {
            color: var(--brand-800);
            text-decoration: none;
            display: block;
            padding: var(--size-2);
        }

        span a {
            color: var(--brand-400);
        }

        ul {
            padding: 0;
            list-style: none;
            text-align: center;
        }

        ul a {
            letter-spacing: var(--font-letterspacing-4);
            color: var(--brand-900);
            text-decoration: none;
            text-transform: uppercase;
        }
    </style>
</Section>
