---
import { Image } from "astro:assets";

import { Icon } from "astro-icon/components";

import About from "./About.astro";
import Container from "./Container.astro";
import Section from "./Section.astro";

import arrows from "../assets/arrows.svg";
---

<Section>
    <Container paddingBlock="12">
        <div class="hero-container">
            <div class="hero-container__text">
                <h1>
                    Çeyrek asırlık deneyimle <br /> baskı çözümlerinde güçlü bir
                    gelecek vizyonu
                </h1>
                <a href="#markalar"
                    >MARKALAR <Icon name="ic:outline-arrow-forward" />
                </a>
            </div>
            <Image src={arrows} alt="Two arrows pointing left" />
        </div>
    </Container>
    <About />
</Section>

<style>
    .hero-container {
        display: flex;
    }

    h1 {
        font-size: var(--font-size-fluid-2);
        font-weight: var(--font-weight-4);
        line-height: var(--font-lineheight-1);
    }

    a {
        margin-top: var(--size-9);
        letter-spacing: var(--font-letterspacing-4);
        color: var(--brand-300);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: var(--size-2);
        width: fit-content;
    }

    a:hover {
        color: var(--brand-400);
    }

    [data-icon] {
        width: var(--size-4);
        height: var(--size-4);
        padding: var(--size-1);
        border-radius: var(--radius-round);
        border: var(--border-size-1) solid var(--gray-7);
    }

    a:hover [data-icon] {
        animation: var(--animation-shake-x);
    }

    img {
        display: none;
        max-width: 225px;
        margin-left: auto;
        margin-right: var(--size-10);
        transform: rotate(-10deg);
    }

    @media (min-width: 500px) {
        img {
            display: block;
        }
    }
</style>
