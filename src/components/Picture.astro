---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
    src: string;
    alt: string;
}

const { src, alt } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/logos/*.{png,jpg}",
);

if (!images[src])
    throw new Error(
        `"${src}" does not exist in glob: "src/assets/logos/*.{png}"`,
    );
---

<Image src={images[src]()} alt={alt} class="picture" />

<style>
    .picture {
        transition: 0.5s filter;
        filter: grayscale();
    }

    .picture:hover,
    .picture:focus {
        filter: none;
    }
</style>
